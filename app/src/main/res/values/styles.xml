<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--No Title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>

        <!--Background-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme" >
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LightAppTheme" parent="AppTheme">
        <item name="colorAccent">@android:color/black</item>
    </style>


    <!--************************************ Button ************************************-->
    <style name="ButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="BlueButton" parent="ButtonStyle">
        <item name="colorButtonNormal">@color/colorBlue</item>
    </style>

    <style name="GreenButton" parent="ButtonStyle">
        <item name="colorButtonNormal">@color/colorGreen</item>
    </style>


    <!--************************************ Toolbar ************************************-->
    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--************************************ ProgressDialog ************************************-->
    <style name="ProgressDialogTransparentTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/colorGreen</item>
    </style>

    <!--************************************ AlertDialog ************************************-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

    <!--************************************ EditText ************************************-->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>
</resources>
