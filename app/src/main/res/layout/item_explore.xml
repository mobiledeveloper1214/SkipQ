<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_biz_logo"
            android:layout_width="@dimen/size_48"
            android:layout_height="@dimen/size_48"
            android:layout_margin="@dimen/size_08"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorBlue"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/size_08"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_biz_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_size_title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_biz_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business category"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/tv_biz_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Status"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/font_size_normal" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="@string/app_name"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextHint" />

</LinearLayout>