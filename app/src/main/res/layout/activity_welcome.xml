<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skipq.android.views.user.WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_background"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size_16"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <ImageView
            android:id="@+id/iv_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_logo"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_48"
            android:layout_marginRight="@dimen/size_48"
            android:gravity="center"
            android:text="@string/intro"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_title"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_32">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_sign_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/size_08"
                fancy:fb_text="SIGN UP"
                fancy:fb_textColor="@android:color/white"
                fancy:fb_textSize="@dimen/font_size_normal"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="@color/colorGreen"
                fancy:fb_focusColor="@color/colorGreen"
                fancy:fb_radius="@dimen/border_radius"
                fancy:fb_ghost="true"/>

            <Space
                android:layout_width="@dimen/size_16"
                android:layout_height="match_parent" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_sign_in"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/size_08"
                fancy:fb_text="SIGN IN"
                fancy:fb_textColor="@android:color/white"
                fancy:fb_textSize="@dimen/font_size_normal"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="@color/colorBlue"
                fancy:fb_focusColor="@color/colorBlue"
                fancy:fb_radius="@dimen/border_radius"
                fancy:fb_ghost="true"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
